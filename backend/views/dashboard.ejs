<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - LinkShrink</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">LinkShrink</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/dashboard">Dashboard</a>
            </li>
          </ul>
          <div class="d-flex align-items-center">
            <span class="text-light me-3">Welcome, <%= user.username %></span>
            <a href="/user/logout" class="btn btn-outline-light">Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <h2>Your Dashboard</h2>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">User Information</h5>
              <p><strong>Username:</strong> <%= user.username %></p>
              <p><strong>Email:</strong> <%= user.email %></p>
              <p><strong>Role:</strong> <%= user.role %></p>
            </div>
          </div>

          <h3>Your URLs</h3>
          <% if (urls.length === 0) { %>
          <p>No URLs created yet.</p>
          <% } else { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Short URL</th>
                  <th>Original URL</th>
                  <th>Clicks</th>
                  <th>Created At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% urls.forEach(url => { %>
                <tr>
                  <td>
                    <a href="<%= baseUrl %>/<%= url.shortId %>" target="_blank">
                      <%= baseUrl %>/<%= url.shortId %>
                    </a>
                  </td>
                  <td><%= url.redirectUrl %></td>
                  <td><%= url.visitHistory.length %></td>
                  <td><%= new Date(url.createdAt).toLocaleDateString() %></td>
                  <td>
                    <button
                      class="btn btn-sm btn-danger"
                      onclick="deleteUrl('<%= url.shortId %>')"
                    >
                      Delete
                    </button>
                    <a
                      href="/url/analytics/<%= url.shortId %>"
                      class="btn btn-sm btn-info"
                      >Analytics</a
                    >
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      async function deleteUrl(shortId) {
        if (confirm("Are you sure you want to delete this URL?")) {
          try {
            const response = await fetch(`/url/delete/${shortId}`, {
              method: "DELETE",
            });
            const data = await response.json();
            if (data.success) {
              window.location.reload();
            } else {
              alert("Error deleting URL: " + data.error);
            }
          } catch (error) {
            alert("Error deleting URL");
          }
        }
      }
    </script>
  </body>
</html>
